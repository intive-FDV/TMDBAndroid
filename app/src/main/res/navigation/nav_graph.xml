<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragmentDest">

    <fragment
        android:id="@+id/homeFragmentDest"
        android:name="com.intive.tmdbandroid.home.ui.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragmentDest_to_TVShowDetail"
            app:destination="@id/detailFragmentDest"
            app:popUpTo="@id/homeFragmentDest" />
    </fragment>
    <fragment
        android:id="@+id/detailFragmentDest"
        android:name="com.intive.tmdbandroid.details.ui.DetailFragment"
        android:label="{screeningTitle}"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="screeningTitle"
            app:argType="string" />
    </fragment>

</navigation>
