<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragmentDest">

    <fragment
        android:id="@+id/homeFragmentDest"
        android:name="com.intive.tmdbandroid.home.ui.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragmentDest_to_detailAndSearchActivity"
            app:destination="@id/detailAndSearchActivity"
            app:popUpTo="@id/homeFragmentDest" />
    </fragment>

    <activity
        android:id="@+id/detailAndSearchActivity"
        android:name="com.intive.tmdbandroid.activities.DetailAndSearchActivity"
        android:label="activity_detail_and_search"
        tools:layout="@layout/activity_detail_and_search" >
        <argument
            android:name="screeningID"
            app:argType="integer"/>
    </activity>

</navigation>
