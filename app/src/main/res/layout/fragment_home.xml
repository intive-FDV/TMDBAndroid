<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        tools:context=".ui.EventListFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/popular_movies_text_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/primaryColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/popular_movies_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/popular_movies"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popularMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginVertical="2dp"
            app:layout_constraintTop_toBottomOf="@id/popular_movies_text_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/popular_tvshows_text_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/primaryColor"
            app:layout_constraintTop_toBottomOf="@+id/rv_popularMovies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/popular_tvshows_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/popular_tvShows"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popularTVShows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginVertical="3dp"
            app:layout_constraintTop_toBottomOf="@id/popular_tvshows_text_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/movies_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/rv_popularMovies"
            app:layout_constraintBottom_toBottomOf="@+id/rv_popularMovies"
            app:layout_constraintStart_toStartOf="@+id/rv_popularMovies"
            app:layout_constraintEnd_toEndOf="@+id/rv_popularMovies" />

        <ProgressBar
            android:id="@+id/tvshows_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/rv_popularTVShows"
            app:layout_constraintBottom_toBottomOf="@+id/rv_popularTVShows"
            app:layout_constraintStart_toStartOf="@+id/rv_popularTVShows"
            app:layout_constraintEnd_toEndOf="@+id/rv_popularTVShows" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
