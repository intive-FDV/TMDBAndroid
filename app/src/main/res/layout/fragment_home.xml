<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        tools:context=".ui.EventListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popularTVShows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/tvshows_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/rv_popularTVShows"
            app:layout_constraintBottom_toBottomOf="@+id/rv_popularTVShows"
            app:layout_constraintStart_toStartOf="@+id/rv_popularTVShows"
            app:layout_constraintEnd_toEndOf="@+id/rv_popularTVShows" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
